<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bharbie.akuafo">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Akuafo"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.HomeActivity" />
        <activity android:name=".Activities.AdsAndInfoActivity" />
        <activity android:name=".Activities.PostAdsFirstActivity" />
        <activity android:name=".Activities.PostAdsSecondActivity" />
        <activity android:name=".Activities.PostTrucksActivity" />
        <activity android:name=".Activities.PostExtensionActivity" />
        <activity android:name=".Activities.AdsListItemShowActivity" />
        <activity android:name=".Activities.TruckListItemShowActivity" />
        <activity android:name=".Activities.ExtensionListItemShowActivity"></activity>
    </application>

</manifest>