<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bharbie.akuafo.Activities.PostExtensionActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/post_extension_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edit_text_margin"
                android:text="@string/post_extension_heading"
                android:textColor="@color/secondary_text"/>


            <EditText
                android:id="@+id/post_extension_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edit_text_margin"
                android:ellipsize="end"
                android:hint="@string/post_extension_heading"
                android:maxLines="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edit_text_margin"
                android:text="@string/post_extension_info"
                android:textColor="@color/secondary_text"/>

            <EditText
                android:id="@+id/post_extension_info"
                android:layout_margin="@dimen/edit_text_margin"
                android:scrollbars="vertical"
                android:lines="8"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:gravity="start"
                android:minLines="6"
                android:ellipsize="end"
                android:hint="@string/post_extension_info_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/divider" />

            <Button
                android:id="@+id/post_extension_button"
                android:textStyle="bold"
                android:textColor="@color/back_color"
                android:text="@string/post_extension_button"
                android:layout_gravity="end"
                android:layout_margin="@dimen/text_view_margin"
                android:background="@drawable/button_custom"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
